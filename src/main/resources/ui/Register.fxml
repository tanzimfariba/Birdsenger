<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ui.RegisterController" spacing="12" alignment="CENTER">
    <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>

    <Label text="BirdSenger â€” Register" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="280"/>
    <TextField fx:id="usernameField" promptText="Username" maxWidth="280"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="280"/>
    <PasswordField fx:id="confirmField" promptText="Confirm Password" maxWidth="280"/>

    <Button text="Register" onAction="#onRegister" maxWidth="280" prefWidth="280"/>
    <Hyperlink text="Back to Login" onAction="#goToLogin"/>

    <Label fx:id="statusLabel" textFill="gray"/>
</VBox>
